@model ASPNETCoreDbFirst.Models.OrderTabVM

@{
    ViewData["Title"] = "Create";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Purchase Order</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .container {
            max-width: 800px;
            margin: auto;
        }

        .order {
            padding-right: 300px
        }

        .form-group {
            margin-bottom: 10px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
            }

            .form-group select,
            .form-group input {
                width: 30%;
                padding: 8px;
                box-sizing: border-box;
            }

        .status {
            width: 20%
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table, th, td {
            border: 1px solid #ccc;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f4f4f4;
        }

        .total-section {
            margin-top: 20px;
            text-align: right;
        }

        .submit-button {
            text-align: right;
            margin-top: 20px;
        }

            .submit-button button {
                padding: 10px;
                background-color: greenyellow;
                color: white;
                border: none;
                cursor: pointer;
            }

    </style>
</head>
<body>

    <div class="container">
        <h2>Order Detail</h2>
        <div class="form-group">
            <label for="OrderNumber">OrderNumber</label>
            <input type="text" id="OrderNumber">
        </div>
        <div class="form-group">
            <label class="control-label">Customer</label><span class="mandatory"></span>
            @Html.DropDownList("CustomerId", (IEnumerable<SelectListItem>)ViewBag.Customer, "--Select--", new { @class = "form-select", required = "required" })
            <span asp-validation-for="CustomerId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="OrderDate">OrderDate</label>
            <input type="date" id="OrderDate">
        </div>
        <div class="submit-button">
            <input type="submit" value="Add" onclick="addRow()"class="btn btn-primary" />
        </div>
        <table>
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SubTotal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Discount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShippingFee)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NetTotal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StatusId)
                    </th>

                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    <div class="status">
        <label class="control-label">Status</label><span class="mandatory"></span>
        @Html.DropDownList("StatusId", (IEnumerable<SelectListItem>)ViewBag.StatusId, "--Select--", new { @class = "form-select", required = "required" })
        <span asp-validation-for="StatusId" class="text-danger"></span>
    </div>
    <div class="submit-button">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</body>
</html>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function addRow() {
            var newRow = `<tr>
                        <td><input name="ProductId" type="number" class="form-control" /></td>
                        <td><input name="Quantity" type="number" class="form-control" /></td>
                        <td><input name="UnitPrice" type="number" step="0.01" class="form-control" /></td>
                        <td><input name="TotalAmount" type="number" step="0.01" class="form-control" /></td>
                        <td><input name="SubTotal" type="number" step="0.01" class="form-control" /></td>
                        <td><input name="Discount" type="number" step="0.01" class="form-control" /></td>
                        <td><input name="ShippingFee" type="number" step="0.01" class="form-control" /></td>
                        <td><input name="NetTotal" type="number" step="0.01" class="form-control" /></td>
                        <td><button type="button" class="btn btn-danger" onclick="removeRow(this)">Remove</button></td>
                    </tr>`;
            $('#orderItems tbody').append(newRow);
        }

        function removeRow(button) {
            $(button).closest('tr').remove();
        }

        function saveOrder() {
            var orderTab = {
                OrderNumber: $("#OrderTab_OrderNumber").val(),
                Customer: $("#OrderTab_Customer").val(),
                OrderDate: $("#OrderTab_OrderDate").val(),
                Status: $("#OrderTab_Status").val()
            };

            $.ajax({
                url: '@Url.Action("SaveOrderTab", "Order")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(orderTab),
                success: function (response) {
                    if (response.success) {
                        var orderItems = [];
                        $('#orderItems tbody tr').each(function () {
                            var item = {
                                ProductId: $(this).find('input[name="ProductId"]').val(),
                                Quantity: $(this).find('input[name="Quantity"]').val(),
                                UnitPrice: $(this).find('input[name="UnitPrice"]').val(),
                                TotalAmount: $(this).find('input[name="TotalAmount"]').val(),
                                SubTotal: $(this).find('input[name="SubTotal"]').val(),
                                Discount: $(this).find('input[name="Discount"]').val(),
                                ShippingFee: $(this).find('input[name="ShippingFee"]').val(),
                                NetTotal: $(this).find('input[name="NetTotal"]').val()
                           $('#orderItems tbody tr').append(item);

                            };
                            orderItems.push(item);
                        });

                        $.ajax({
                            url: '@Url.Action("SaveOrderItems", "Order")',
                            type: 'POST',
                            contentType: 'application/json',
                            data: JSON.stringify(orderItems),
                            success: function (response) {
                                if (response.success) {
                                    window.location.href = '@Url.Action("Success", "Order")';
                                } else {
                                    alert("Failed to save order items");
                                }
                            }
                        });
                    } else {
                        alert("Failed to save order tab");
                    }
                }
            });
        }
    </script>
}



