@model IEnumerable<ASPNETCoreDbFirst.DbModels.OrderTab>

@{
    ViewData["Title"] = "List";
}
<Style>
    .Start {
        display: flex;
        justify-content: space-between;
    }

    #popupContainer {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 80%;
        height: 80%;
        background-color: white;
        box-shadow: 0 0 10px rgba(0,0,0,0.5);
        z-index: 1000;
    }

        #popupContainer iframe {
            width: 100%;
            height: 100%;
            border: none;
        }

</Style>

<div class="Start">
    <h1>Order List</h1>
    <br /><br />
    <a asp-controller="OrderTab" asp-action="Create" class="btn btn-primary h-50"><i class="fa-solid fa-plus"></i> Create Order</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Customer Name")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NetTotal)
            </th>
            <th>
                @Html.DisplayName("Status")
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="item-@item.OrderId">
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NetTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.StatusName)
                </td>
                <td>
                    <a asp-controller="OrderTab" asp-action="Edit" asp-route-id="@item.OrderId" class="btn btn-outline-primary mr-2"><i class="fa fa-pencil-square" aria-hidden="true"></i></a>
                    @*<button onclick="popup()" class="btn btn-outline-primary mr-2"><i class="fa fa-info-circle" aria-hidden="true"></i></button> *@
                    <a href="#" class="details-link btn btn-outline-info btn-sm" data-id="@item.OrderId"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                    <a asp-controller="OrderTab" asp-action="Delete" asp-route-id="@item.OrderId" class="btn btn-outline-primary mr-2"><i class="fas fa-trash"></i></a>

                </td>
            </tr>
        }

    </tbody>
</table><!-- Details Modal structure -->
<div class="modal fade" id="orderDetailsModal" tabindex="-1" role="dialog" aria-labelledby="orderDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="orderDetailsModalLabel">Order Details</h5>
                <a type="button" class="close" asp-controller="OrderTab" asp-action="List" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></a>
            </div>
            <div class="modal-body">
                <!-- Order details will be loaded here -->
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.details-link').click(function (event) {
                event.preventDefault();
                var orderId = $(this).data('id');

                $.ajax({
                    url: '/OrderTab/Details/' + orderId,
                    type: 'GET',
                    success: function (data) {
                        var modalBody = $('#orderDetailsModal .modal-body');
                        modalBody.empty();
                        modalBody.append('<h5>Order</h5>');
                        modalBody.append('<p><strong>Order Number:</strong> ' + data.orderNumber + '</p>');
                        modalBody.append('<p><strong>Customer Name:</strong> ' + data.customerName + '</p>');
                        modalBody.append('<p><strong>Order Date:</strong> ' + new Date(data.orderDate).toLocaleDateString() + '</p>');
                        modalBody.append('<hr>');
                        modalBody.append('<p><strong>Subtotal:</strong> ' + data.subTotal + '</p>');
                        modalBody.append('<p><strong>Discount:</strong> ' + data.discount + '</p>');
                        modalBody.append('<p><strong>Shipping Fee:</strong> ' + data.shippingFee + '</p>');
                        modalBody.append('<p><strong>Net Amount:</strong> ' + data.netAmount + '</p>');
                        modalBody.append('<p><strong>Status:</strong> ' + data.statusName + '</p>');
                        modalBody.append('<hr>');
                        modalBody.append('<h5>Order Items</h5>');
                        var orderItemsTable = '<table class="table"><thead><tr><th>Name</th><th>Quantity</th><th>Unit Price</th><th>TotalAmount</th></tr></thead><tbody>';
                        $.each(data.orderItems, function (index, item) {
                            orderItemsTable += '<tr><td>' + item.productName + '</td><td>' + item.quantity + '</td><td>' + item.unitPrice + '</td><td>' + item.totalAmount + '</td></tr>';
                        });
                        orderItemsTable += '</tbody></table>';
                        modalBody.append(orderItemsTable);
                        $('#orderDetailsModal').modal('show');
                    },
                    error: function () {
                        alert('Error loading order details.');
                    }
                });
            });


            document.addEventListener('DOMContentLoaded', function () {
                // Select all elements with the class 'delete-link'
                const deleteLinks = document.querySelectorAll('.delete-link');

                // Add click event listener to each delete link
                deleteLinks.forEach(function (link) {
                    link.addEventListener('click', function (event) {
                        // Prevent the default action (following the href)
                        event.preventDefault();

                        // Show the confirmation dialog
                        const userConfirmed = confirm('Are you sure you want to delete?');

                        // If the user confirms, proceed with the deletion
                        if (userConfirmed) {
                            // For example, you can submit a form or navigate to the link's href
                            // This part depends on your actual deletion logic
                            console.log('User confirmed deletion for item with ID:', link.dataset.id);
                            // window.location.href = link.href; // Uncomment to navigate to the link's href
                        }
                    });
                });
            });


            $('#Remove').click(function () {
                if (confirm('Are you sure you want to delete this record?')) {
                    $.ajax({
                        url: '@Url.Action("Delete", "OrderTab")',
                        type: 'POST',
                        contentType: 'application/json; charset=utf-8',
                        data: newItem,
                        success: function (response) {
                            if (response.success) {
                                alert('Record deleted successfully.');
                                location.reload();
                            } else {
                                alert('Error: ' + response.message);
                            }
                        },
                        error: function () {
                            alert('An error occurred while deleting the record.');
                        }
                    });
                }

            });
        });
    </script>
}

